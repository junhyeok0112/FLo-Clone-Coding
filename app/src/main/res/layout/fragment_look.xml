                android:textSize="17sp"
                app:layout_constraintTop_toBottomOf="@id/lock_popular_album4_title_tv"
                app:layout_constraintStart_toEndOf="@id/lock_popular_album4_num_tv"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/lock_popluar_album4_play_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_miniplayer_play"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/lock_popular_album4_title_tv"
                app:layout_constraintBottom_toBottomOf="@id/lock_popular_album4_singer_tv" />

            <ImageView
                android:id="@+id/lock_popular_album5_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/img_album_exp2"
                app:layout_constraintTop_toBottomOf="@id/lock_popular_album4_iv"
