                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/lock_popular_album3_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="잠이 안온다"
                android:textSize="17sp"
                app:layout_constraintTop_toTopOf="@id/lock_popular_album3_num_tv"
                app:layout_constraintStart_toEndOf="@id/lock_popular_album3_num_tv"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/lock_popular_album3_singer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="젠(zen)"
                android:textSize="17sp"
                app:layout_constraintTop_toBottomOf="@id/lock_popular_album3_title_tv"
                app:layout_constraintStart_toEndOf="@id/lock_popular_album3_num_tv"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/lock_popluar_album3_play_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
