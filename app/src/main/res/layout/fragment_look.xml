                app:layout_constraintTop_toTopOf="@id/lock_popular_album3_title_tv"
                app:layout_constraintBottom_toBottomOf="@id/lock_popular_album3_singer_tv" />

            <ImageView
                android:id="@+id/lock_popular_album4_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/img_album_exp2"
                app:layout_constraintTop_toBottomOf="@id/lock_popular_album3_iv"
