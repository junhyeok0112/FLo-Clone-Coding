<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_locker_cover_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_album_exp2"/>

    <TextView
        android:id="@+id/item_locker_title_tv"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        app:layout_constraintTop_toTopOf="@id/item_locker_cover_iv"
        app:layout_constraintStart_toEndOf="@id/item_locker_cover_iv"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/item_locker_singer_tv"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="singer"
        android:textSize="15sp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        app:layout_constraintTop_toBottomOf="@id/item_locker_title_tv"
        app:layout_constraintStart_toStartOf="@id/item_locker_title_tv"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/item_locker_remove_iv"
        android:layout_width="30dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/btn_player_more"/>

    <ImageView
        android:id="@+id/item_locker_play_iv"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:src="@drawable/nugu_btn_play_32"
        app:layout_constraintEnd_toStartOf="@id/item_locker_remove_iv"
        app:layout_constraintTop_toTopOf="@id/item_locker_remove_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_locker_remove_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>