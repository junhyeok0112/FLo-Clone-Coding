<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/panel_backgroud_iv"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:src="@drawable/img_default_4_x_1"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/panel_btn_setting_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_main_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/panel_btn_ticket_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_main_ticket"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/panel_btn_setting_iv"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/panel_btn_nugu_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_nugu"
        app:layout_constraintEnd_toStartOf="@id/panel_btn_ticket_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/panel_title_tv"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="포근하게 덮어주는 꿈의 목소리"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/panel_btn_nugu_iv"/>

    <ImageView
        android:id="@+id/panel_btn_play_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_panel_play_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/panel_title_tv"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:id="@+id/panel_album_exp1_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_album_exp2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/panel_album_exp2_iv"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/panel_album_exp1_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라일락"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/panel_album_exp1_iv"
        app:layout_constraintTop_toTopOf="@id/panel_album_exp1_iv"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/panel_album_exp1_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/panel_album_exp1_iv"
        app:layout_constraintBottom_toBottomOf="@id/panel_album_exp1_iv"
        android:layout_marginStart="5dp"/>

    <ImageView
        android:id="@+id/panel_album_exp2_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_album_exp2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/panel_backgroud_iv"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/panel_album_exp2_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라일락"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/panel_album_exp2_iv"
        app:layout_constraintTop_toTopOf="@id/panel_album_exp2_iv"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/panel_album_exp2_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/panel_album_exp2_iv"
        app:layout_constraintBottom_toBottomOf="@id/panel_album_exp2_iv"
        android:layout_marginStart="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
