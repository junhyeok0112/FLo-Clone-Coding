<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/savealbum_cover_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img_album_exp2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/savealbum_cover_iv"
        app:layout_constraintBottom_toBottomOf="@id/savealbum_cover_iv"
        app:layout_constraintStart_toEndOf="@id/savealbum_cover_iv"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/savealbum_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/savealbum_singger_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가수이름"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/savealbum_day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021.03.25|정규|댄스 팝"
            android:textSize="15sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/savealbum_more_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/container"
        app:layout_constraintBottom_toBottomOf="@id/container" />

    <ImageView
        android:id="@+id/savealbum_player_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_play"
        app:layout_constraintTop_toTopOf="@id/savealbum_more_iv"
        app:layout_constraintBottom_toBottomOf="@id/savealbum_more_iv"
        app:layout_constraintEnd_toStartOf="@id/savealbum_more_iv"/>






</androidx.constraintlayout.widget.ConstraintLayout>