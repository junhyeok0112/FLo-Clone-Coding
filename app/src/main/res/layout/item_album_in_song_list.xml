<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/item_songlist_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/item_songlist_titlebtn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_title_list"
            android:text="TITLE"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="@id/item_songlist_number_tv"
            app:layout_constraintStart_toEndOf="@id/item_songlist_number_tv"
            app:layout_constraintTop_toTopOf="@id/item_songlist_number_tv" />

        <TextView
            android:id="@+id/item_songlist_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="라일락"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/item_songlist_titlebtn_tv"
            app:layout_constraintTop_toTopOf="@id/item_songlist_number_tv"
            android:layout_marginStart="3dp"/>

        <TextView
            android:id="@+id/item_songlist_singger_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유(IU)"
            app:layout_constraintTop_toBottomOf="@id/item_songlist_title_tv"
            app:layout_constraintStart_toEndOf="@id/item_songlist_number_tv"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"/>

        <ImageView
            android:id="@+id/item_songlist_play_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_miniplayer_play"
            app:layout_constraintEnd_toStartOf="@id/item_songlist_moreinfo_iv"
            app:layout_constraintTop_toTopOf="@id/item_songlist_moreinfo_iv"
            app:layout_constraintBottom_toBottomOf="@id/item_songlist_moreinfo_iv"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/item_songlist_moreinfo_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_player_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

